            <plugin>
                <groupId>ontology.mayo.edu</groupId>
                <artifactId>lode-mvn-plugin</artifactId>
                <version>1.0</version>
                <configuration>
                    <useOWLAPI>true</useOWLAPI>
                    <considerImportedClosure>false</considerImportedClosure>
                    <deepImport>false</deepImport>

                    <xsltLocation>lode.xsl</xsltLocation>
                </configuration>
                <executions>

                    <execution>
                        <id>API4KP-Norm</id>
                        <phase>package</phase>
                        <goals><goal>lode-gen</goal></goals>
                        <configuration>
                            <ontologyURLs>
                                <ontologyURL>${project.build.outputDirectory}/API4KP/api4kp-core.owl</ontologyURL>
                                <ontologyURL>${project.build.outputDirectory}/API4KP/api4kp-kp.ofn</ontologyURL>
                                <ontologyURL>${project.build.outputDirectory}/API4KP/api4kp-krr.ofn</ontologyURL>
                            </ontologyURLs>
                            <targetDirectory>${pom.basedir}/docs/_Normative</targetDirectory>
                            <xsltLocation>${project.build.outputDirectory}/lode.xsl</xsltLocation>
                            <catalog>${project.build.outputDirectory}/API4KP/catalog-dist.xml</catalog>
                        </configuration>
                    </execution>


                    <execution>
                        <id>API4KP-Info</id>
                        <phase>package</phase>
                        <goals><goal>lode-gen</goal></goals>
                        <configuration>
                            <ontologyURLs>
                                <ontologyURL>${project.build.outputDirectory}/API4KP/informative/kmdo.owl</ontologyURL>
                            </ontologyURLs>
                            <targetDirectory>${pom.basedir}/docs/_Informative</targetDirectory>
                            <xsltLocation>${project.build.outputDirectory}/lode.xsl</xsltLocation>
                            <catalog>${project.build.outputDirectory}/API4KP/catalog-dist.xml</catalog>
                        </configuration>
                    </execution>

                    <execution>
                        <id>API4KP-Bridges</id>
                        <phase>package</phase>
                        <goals><goal>lode-gen</goal></goals>
                        <configuration>
                            <ontologyURLs>
                                <ontologyURL>${project.build.outputDirectory}/API4KP/bridges/DOL-Bridge.owl</ontologyURL>
                                <ontologyURL>${project.build.outputDirectory}/API4KP/bridges/FRBR-Bridge.owl</ontologyURL>
                            </ontologyURLs>
                            <targetDirectory>${pom.basedir}/docs/_Bridges</targetDirectory>
                            <xsltLocation>${project.build.outputDirectory}/lode.xsl</xsltLocation>
                            <catalog>${project.build.outputDirectory}/API4KP/catalog-dist.xml</catalog>
                        </configuration>
                    </execution>

                    <execution>
                        <id>DOL</id>
                        <phase>package</phase>
                        <goals><goal>lode-gen</goal></goals>
                        <configuration>
                            <ontologyURLs>
                                <ontologyURL>${project.build.outputDirectory}/DOL/registry.owl</ontologyURL>
                                <ontologyURL>${project.build.outputDirectory}/DOL/DOL-terms.rdf</ontologyURL>
                            </ontologyURLs>
                            <targetDirectory>${pom.basedir}/docs/_DOL</targetDirectory>
                            <xsltLocation>${project.build.outputDirectory}/lode.xsl</xsltLocation>
                            <catalog>${project.build.outputDirectory}/API4KP/catalog-dist.xml</catalog>
                        </configuration>
                    </execution>


                    <execution>
                        <id>OMG</id>
                        <phase>package</phase>
                        <goals><goal>lode-gen</goal></goals>
                        <configuration>
                            <ontologyURLs>
                                <ontologyURL>${project.build.outputDirectory}/OMG/SpecificationMetadata.rdf</ontologyURL>
                            </ontologyURLs>
                            <targetDirectory>${pom.basedir}/docs/_OMG</targetDirectory>
                            <xsltLocation>${project.build.outputDirectory}/lode.xsl</xsltLocation>
                            <catalog>${project.build.outputDirectory}/API4KP/catalog-dist.xml</catalog>
                        </configuration>
                    </execution>



